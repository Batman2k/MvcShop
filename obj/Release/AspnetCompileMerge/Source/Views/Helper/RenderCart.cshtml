@model  IEnumerable<RapidMountain.Core.Models.CartView>

<li class="quick-cart">
    <a href="#">
        @if (Model.Any())
            {
                <span class="badge badge-aqua btn-xs badge-corner">
            
                @Model.Select(m => m.Amount).Sum()
           
    </span>
        }
        <i class="fa fa-shopping-cart"></i>
    </a>
<div class="quick-cart-box">
    <h4>Shop Cart</h4>

    <div class="quick-cart-wrapper">

        @if (Model.Any())
            {
                foreach (var cartView in Model)
                {
                <a href="@Url.Action("Details","Product", new {id = cartView.ProductId})">
                    <img src="@Url.Action("RenderPictureUri","Helper", new {id = cartView.PictureId})" width="45" height="45" alt="" />
                    <h6><span>@cartView.Amount x</span>@cartView.Name</h6>
                    <small>@(cartView.Price * cartView.Amount)</small>
                </a>
            }
        }
    </div>

    <div class="quick-cart-footer clearfix">
        <a href="@Url.Action("Cart","Cart")" class="btn btn-primary btn-xs pull-right">VIEW CART</a>
        <span class="pull-left"><strong>TOTAL:</strong> $@Model.Select(m => m.Price * m.Amount).Sum()</span>
    </div>
</div>
</li>