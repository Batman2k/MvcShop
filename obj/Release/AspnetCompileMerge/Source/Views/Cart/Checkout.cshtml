@using System.Web.UI.WebControls
@model RapidMountain.Controllers.CheckoutViewModel

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("Checkout", "Cart"))
{
  

    <fieldset class="margin-top-60">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                @Html.Label("First Name*")
                @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
            <div class="col-md-6 col-sm-6">
                @Html.Label("Last Name*")
                @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                @Html.Label("Address*")
                @Html.EditorFor(m => m.AddressOne, new { htmlAttributes = new { @class = "form-control", placeholder = "Address one" } })
                @Html.ValidationMessageFor(m => m.AddressOne)
                
                @Html.EditorFor(m => m.AddressTwo, new { htmlAttributes = new { @class = "form-control margin-top-10", placeholder = "Address two" } })
                @Html.ValidationMessageFor(m => m.AddressTwo)
               
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-6">
                @Html.Label("City*")
                @Html.EditorFor(m => m.City, new { htmlAttributes = new { @class = "form-control" }})
                @Html.ValidationMessageFor(m => m.City)
            </div>
            <div class="col-md-6 col-sm-6">
                @Html.Label("Province*")
                @Html.EditorFor(m => m.Province, new { htmlAttributes = new { @class = "form-control" }})
                @Html.ValidationMessageFor(m => m.Province)
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-6">
                @Html.Label("Zip Code*")
                @Html.EditorFor(m => m.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ZipCode)
            </div>
            <div class="col-md-6 col-sm-6">
                @Html.Label("Country*")
                @Html.EditorFor(m => m.Country, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Country)
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-6">
                @Html.Label("Phone Number*")
                @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.PhoneNumber)
            </div>
          
        </div>

        <hr />


    </fieldset>



    <div class="col-lg-5 col-sm-5 pull-right">
        <div class="heading-title">
            <h4>Payment Method</h4>
        </div>

        <!-- PAYMENT METHOD -->
        <fieldset class="margin-top-60">
            <div class="toggle-transparent toggle-bordered-full clearfix">
                <div class="toggle active">
                    <div class="toggle-content">

                        <div class="row nomargin-bottom">
                            <div class="col-lg-12 nomargin clearfix">
                                <label class="radio pull-left nomargin-top">
                                    <input id="payment_check" name="payment[method]" type="radio" value="1" checked="checked" />
                                    <i></i> <span class="weight-300">Paypal</span>
                                </label>
                            </div>
                            <div class="col-lg-12 nomargin clearfix">
                                <label class="radio pull-left">
                                    <input id="payment_card" name="payment[method]" type="radio" value="2" />
                                    <i></i> <span class="weight-300">Credit Card</span>
                                </label>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </fieldset>
        <!-- /PAYMENT METHOD -->
        <!-- TOTAL / PLACE ORDER -->
        <div class="toggle-transparent toggle-bordered-full clearfix">
            <div class="toggle active">
                <div class="toggle-content">

                    <span class="clearfix">
                        <span class="pull-right">1</span>
                        <strong class="pull-left">Subtotal:</strong>
                    </span>
                    <span class="clearfix">
                        <span class="pull-right">5.00</span>
                        <span class="pull-left">Shipping:</span>
                    </span>
                    <hr />
                    <span class="clearfix">
                        <span class="pull-right size-20">5.22</span>
                        <strong class="pull-left">TOTAL:</strong>
                    </span>

                    <hr />

                    <button type="submit" class="btn btn-primary btn-lg btn-block size-15"><i class="fa fa-mail-forward"></i> Place Order</button>
                </div>
            </div>
        </div>

    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}