@model RapidMountain.Core.ViewModels.HomeViewModel

@{
	ViewBag.Title = "Home Page";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
{
	<ul class="shop-item-list row list-inline nomargin">

